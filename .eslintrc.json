{
    "parser": "babel-eslint",
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "NETWORK": "readonly",
        "pc": "readonly",
        "LevelProvider": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": ["error", { "argsIgnorePattern": "^_", "varIgnorePattern": "^_" }],
        "semi": "warn",
        "quotes": [2, "single"]
    }
}
